<Page
    x:Class="Eyedropper.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Eyedropper.Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:Eyedropper.UWP"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid BorderBrush="Red">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <uwp:EyedropperToolButton HorizontalAlignment="Center" Target="{x:Bind Image}" />
        <Image
            x:Name="Image"
            Grid.Row="1"
            Source="/Assets/test.jpg" />
    </Grid>
</Page>
